// By default we restrict everything
path / {
    read(){
        false
    }
    write(){
        false
    }
}

path /rides/{uid}  {
    read(){
        isSelf(uid)
    }
    path /{rideId} {
        write(){
            isSelf(uid)
        }
    }
}

isLoggedIn(){
    auth != null
}

isSelf(uid){
   isLoggedIn() && auth.uid == uid
}
